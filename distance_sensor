import rclpy
from rclpy.node import Node
from px4_msgs.msg import DistanceSensor  # or change this to match your topic
from rclpy.qos import QoSProfile, ReliabilityPolicy

class DebugSub(Node):
    def __init__(self):
        super().__init__('debug_subscriber')
        qos = QoSProfile(depth=10)
        qos.reliability = ReliabilityPolicy.BEST_EFFORT

        self.create_subscription(
            DistanceSensor,
            '/fmu/out/distance_sensor',
            self.callback,
            qos
        )

    def callback(self, msg):
        self.get_logger().info(f'Received: {msg.current_distance:.2f} meters')

def main(args=None):
    rclpy.init(args=args)
    node = DebugSub()
    rclpy.spin(node)
    node.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()
