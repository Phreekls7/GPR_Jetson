#!/usr/bin/env python3
import os
import math
import rclpy
import pandas as pd
import matplotlib.pyplot as plt
from geographiclib.geodesic import Geodesic
from rclpy.node import Node
from px4_msgs.msg import VehicleOdometry
from rclpy.qos import QoSProfile, QoSReliabilityPolicy, QoSHistoryPolicy

# Force simple local NED plot to avoid Cartopy issues
HAS_CARTOPY = False

class FlightPathPost(Node):
    def __init__(self):
        super().__init__('flight_path_post')

        # output directory for CSV
        self.declare_parameter('output_dir', '/tmp')
        out_dir = self.get_parameter('output_dir').value
        os.makedirs(out_dir, exist_ok=True)
        self.csv_path = os.path.join(out_dir, 'flight_odometry.csv')

        # data buffers
        self.times = []
        self.xs = []
        self.ys = []
        self.zs = []

        # QoS matching PX4 (best effort)
        qos = QoSProfile(
            reliability=QoSReliabilityPolicy.BEST_EFFORT,
            history=QoSHistoryPolicy.KEEP_LAST,
            depth=10
        )

        # subscribe to PX4 odometry
        self.create_subscription(
            VehicleOdometry,
            '/fmu/out/vehicle_odometry',
            self.odom_cb,
            qos
        )

        # prepare Matplotlib interactive plot
        plt.ion()
        self.fig, self.ax = plt.subplots()
        self.line, = self.ax.plot([], [], '-o', markersize=4)
        self.ax.set_title('Real-time Flight Path (Local NED)')
        self.ax.set_xlabel('North (m)')
        self.ax.set_ylabel('East (m)')
        self.ax.grid(True)
        self.ax.axis('equal')
        plt.show()

        # timer to update at 10 Hz
        self.create_timer(0.1, self.update_plot)
        print("Node started. Plotting real-time NED flight path.")

    def odom_cb(self, msg: VehicleOdometry):
        # only NED
        if msg.pose_frame != VehicleOdometry.POSE_FRAME_NED:
            return
        # skip invalid
        if any(math.isnan(v) for v in msg.position):
            return

        t = msg.timestamp * 1e-6  # seconds
        x, y, z = msg.position
        self.times.append(t)
        self.xs.append(x)
        self.ys.append(y)
        self.zs.append(z)

    def update_plot(self):
        if not self.xs:
            return
        # update data
        self.line.set_data(self.xs, self.ys)
        # adjust axes limits dynamically
        self.ax.relim()
        self.ax.autoscale_view()
        # redraw and pause briefly
        self.fig.canvas.draw()
        plt.pause(0.001)

    def save_csv(self):
        df = pd.DataFrame({
            'timestamp_s': self.times,
            'x_m': self.xs,
            'y_m': self.ys,
            'z_m': self.zs,
        })
        df.to_csv(self.csv_path, index=False)
        print(f"Saved CSV → {self.csv_path}")
        return df

    def on_shutdown(self):
        print("Shutting down, saving data…")
        df = self.save_csv()
        if df.empty:
            print("No data recorded.")


def main(args=None):
    rclpy.init(args=args)
    node = FlightPathPost()
    try:
        rclpy.spin(node)
    except KeyboardInterrupt:
        print("Keyboard interrupt received.")
    finally:
        node.on_shutdown()
        node.destroy_node()
        rclpy.shutdown()

if __name__ == '__main__':
    main()
